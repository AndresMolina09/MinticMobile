<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragments.SpecialistDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Group
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/specialist_detail_card_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="specialist_detail_fragment_card_patients, specialist_detail_fragment_card_qualification, specialist_detail_fragment_card_exp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/specialist_detail_fragment_image"
            android:layout_width="124dp"
            android:layout_height="124dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:src="@drawable/primer_doctor"
            android:scaleType="fitXY"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/specialist_detail_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/specialist_detail_fragment_image"
            android:layout_marginTop="16dp"
            android:textSize="25dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:fontFamily="@font/lato_bold"
            tools:text="Dr. Julio Mellizo"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/specialist_detail_fragment_speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_name"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/primaryLight"
            tools:text="Medico general"/>

        <RatingBar
            android:id="@+id/specialist_detail_fragment_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_speciality"
            android:isIndicator="true"
            android:numStars="5"
            tools:rating="4"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/specialist_detail_fragment_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_rating"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="19dp"
            android:textAppearance="@style/TextBlue2.Mintic"
            android:fontFamily="@font/lato"
            tools:text="@string/about_us"/>

        <com.google.android.material.textview.MaterialTextView
        android:id="@+id/specialist_detail_fragment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_description_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:fontFamily="@font/lato"
        tools:text="@string/about_us_doctor"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specialist_detail_fragment_card_patients"
            android:layout_marginVertical="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/specialist_detail_fragment_card_qualification"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_patients_number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    tools:text="15k+"
                    android:textSize="18dp"
                    android:textAppearance="@style/TextBlue.Mintic"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_patients_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_card_patients_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:fontFamily="@font/lato_bold"
                    tools:text="Pacientes"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        //dos

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specialist_detail_fragment_card_qualification"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_description"
            app:layout_constraintStart_toEndOf="@id/specialist_detail_fragment_card_patients"
            app:layout_constraintEnd_toStartOf="@+id/specialist_detail_fragment_card_exp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_qualification_number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="18dp"
                    tools:text="4.5*"
                    android:textAppearance="@style/TextBlue.Mintic"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_qualification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_card_qualification_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:fontFamily="@font/lato_bold"
                    tools:text="Calificacion"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        //tres

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specialist_detail_fragment_card_exp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_description"
            app:layout_constraintStart_toEndOf="@id/specialist_detail_fragment_card_qualification"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_exp_number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    tools:text="8 Años+"
                    android:textSize="18dp"
                    android:textAppearance="@style/TextBlue.Mintic"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specialist_detail_fragment_card_exp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/specialist_detail_fragment_card_exp_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:fontFamily="@font/lato_bold"
                    tools:text="Experiencia"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>